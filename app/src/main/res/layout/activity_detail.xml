<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/news_urlToImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/news" />

            <TextView
                android:id="@+id/news_title"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/element_margin"
                tools:text="title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/source_label"
                    style="@style/DetailLabel"
                    android:layout_marginLeft="@dimen/element_margin"
                    android:text="@string/sourceHeader" />

                <TextView
                    android:id="@+id/news_source_name"
                    style="@style/DetailValue"
                    tools:text="source_name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/author_label"
                    style="@style/DetailLabel"
                    android:layout_marginLeft="@dimen/element_margin"
                    android:text="@string/authorHeader" />

                <TextView
                    android:id="@+id/news_author"
                    style="@style/DetailValue"
                    tools:text="author" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/published_label"
                    style="@style/DetailLabel"
                    android:layout_marginLeft="@dimen/element_margin"
                    android:text="@string/dateHeader" />

                <TextView
                    android:id="@+id/tv_published_date"
                    style="@style/DetailValue"
                    tools:text="Monday, November 24" />
            </LinearLayout>

            <TextView
                android:id="@+id/description_label"
                style="@style/DetailLabel"
                android:layout_marginLeft="@dimen/element_margin"
                android:text="@string/descriptionHeader" />

            <TextView
                android:id="@+id/news_description"
                style="@style/DetailValue"
                android:layout_margin="@dimen/element_margin"
                android:paddingLeft="@dimen/padding"
                tools:text="description" />

            <TextView
                android:id="@+id/content_label"
                style="@style/DetailLabel"
                android:layout_marginLeft="@dimen/element_margin"
                android:text="@string/contentHeader" />

            <TextView
                android:id="@+id/news_content"
                style="@style/DetailValue"
                android:layout_margin="@dimen/element_margin"
                android:paddingLeft="@dimen/padding"
                tools:text="content" />

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id"
                />
        </LinearLayout>

    </ScrollView>


</layout>